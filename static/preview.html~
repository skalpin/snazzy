<html>
<head>
	<meta name="viewport" content="width=${WIDTH}, initial-scale=1"/>
	<title>jsmpeg streaming</title>
	<style type="text/css">
		body {
			background: ${BGCOLOR};
			text-align: center;
			margin-top: 30px;
			font-family: sans;
			
		}

		#countDownText {
			color: white;
			font-family: sans;
			font-size: 80px;
			font-weight: bold;
		}
		#lookUp {
			color: white;
			font-family: sans;
			font-size: 80px;
			font-weight: bold;
		}
		
		#go {
			width: 200px;
			height: 100px;
			font-size: 30px;
			font-weight: bold;
		}



		#videoCanvas {
			/* Always stretch the canvas to 640x480, regardless of its
			internal size. */
			width: ${WIDTH}px;
			height: ${HEIGHT}px;
		}
	</style>
	<script type="text/javascript" src="/static/jquery-2.1.4.min.js"></script>
	<script>
		$(document).ready(function(){
			var u = 100;
			var v = 150;
			var contrast = 0;
			var brightness = 50;
			var contrast_delta = 5;
			var brightness_delta = 5;

			var goButton = $("#go");
			var countDown = $("#countDown");
			var countDownText = $("#countDownText");
			var lookUp = $('#lookUp');
			var videoCanvas = $('#videoCanvas');
			var takeNumber = 1;

			$("#start").click(function(){
				window.location = "/preview.html?color=sepia";			
			});
			$("#stop").click(function(){
				$.get("/stop", function(data){
					console.log('Stop response:', data.responseText);				
				})			
			});
			$("#picture").click(function() {
				$.get("/picture/"+takeNumber , {}, function(data) {
					console.log('got picture response');
					var resp_json = JSON.parse(data.responseText);
					$("#picture_container").attr("src", resp_json.src);
				});			
			});
			$("#u_up").click(function(){
				u += 1;
				send_effect(u,v, brightness, contrast)
			});
			$("#u_down").click(function(){
				u -= 1;
				send_effect(u,v, brightness, contrast)
			});
			$("#v_up").click(function(){
				v += 1;
				send_effect(u,v, brightness, contrast)
			});
			$("#v_down").click(function(){
				v -= 1;
				send_effect(u,v, brightness, contrast)
			});

			$("#contrast_up").click(function(){
				contrast += contrast_delta;
				send_effect(u,v, brightness, contrast)
			});
			$("#contrast_down").click(function(){
				contrast -= contrast_delta;
				send_effect(u,v, brightness, contrast)
			});

			$("#brightness_up").click(function(){
				brightness += brightness_delta;
				send_effect(u,v, brightness, contrast)
			});
			$("#brightness_down").click(function(){
				brightness -= brightness_delta;
				send_effect(u,v, brightness, contrast)
			});

			function send_effect(u, v, brightness, contrast) {
				$.get("/settings", {'color_effect': u+','+v, 'brightness' : brightness, 'contrast': contrast}, function(data){
					console.log(data.responseText);
				})
			}
			function take_picture(){
				$.get("/picture/"+takeNumber, {}, function(data){
					console.log(data.responseText);
				});
				setTimeout(function(){
					if(takeNumber < 3) {
						takeNumber += 1;
						console.log('continuing');
						startCountdown(5);
					} else {
						/*
						countDown.hide();
						lookUp.hide();
						videoCanvas.show();
						goButton.show();
						takeNumber = 1;
						*/
						window.location = "/static/index.html";
					}
				}, 1000)
			}

			function startCountdown(start_value) {
				goButton.hide();
				lookUp.hide();
				videoCanvas.show();
				countDown.show();
				countDownText.html(start_value);
				
				var timer = setInterval(function(){
					start_value -= 1;
					if(start_value >= 1) {
						countDownText.html(start_value);
					} else {
						clearInterval(timer);
						
						showLookUp();
						setTimeout(function(){
							take_picture();					
						}, 1000);
					}	
				}, 1000);
			}
			
			function showLookUp(){
				countDown.hide();
				videoCanvas.hide();
				lookUp.show();
			}

			function showFinish() {
				
			}


			goButton.click(function(){
				startCountdown(5);			
			});
		

		});
	</script>
</head>
<body>
